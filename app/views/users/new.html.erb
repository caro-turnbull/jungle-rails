<section >

  <header class="page-header">
    <h1>Signup!</h1>
  </header>

  <div class="form-group row">
    <%= form_for :user, url: '/users' do |f| %>

      <div class="form-group">Name: <%= f.text_field :name %> </div>
      <div class="form-group">Email: <%= f.text_field :email %> </div>
      <div class="form-group">Password: <%= f.password_field :password %>
      Password Confirmation: <%= f.password_field :password_confirmation %> 
      <%= f.submit "Submit" %> </div>

    <% end %>
  </div>
</section>
